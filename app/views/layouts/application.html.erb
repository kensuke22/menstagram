<!DOCTYPE html>
<html>
  <head>
    <title>Menstagram</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notification is-info">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>
    
    <% if flash[:alert] %>
      <div class="notification is-danger">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>
    
<header class="shadow-sm">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <a class="navbar-brand p-2">
        <%= link_to root_path, class: 'nav-link text-dark' do %>
            <h1 class="title is-4" style="font-family: cursive;">麺stagram</h1>
        <% end %>
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
                <li class="nav-item">
                  <%= link_to '投稿フォーム', new_ramen_image_path, class: 'nav-link text-dark' %> 
                </li>
                <li class="nav-item">
                  <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'nav-link text-dark' %>
                </li>
                <li class="nav-item">
                  <%= link_to 'マイページ', user_path(current_user.id), class: 'nav-link text-dark' %>
                </li>
                <li class="nav-item">
                  <%= link_to 'ラーメン一覧', ramen_images_path, class: 'nav-link text-dark' %>
                </li>
                <li class="nav-item">
                  <%= link_to '麺バー', users_path(current_user.id), class: 'nav-link text-dark' %>
                </li>
          <% else %>
                <li class="nav-item">
                  <%= link_to "ログイン", new_user_session_path, class: 'nav-link text-dark' %>
                </li>
                <li class="nav-item">
                  <%= link_to "新規登録", new_user_registration_path, class: 'nav-link text-dark' %>
                </li>
          <% end %>
          </ul>
        </div>
    </div>
  </nav>
    <% if user_signed_in? %>

      <%= form_tag(search_search_path, method: :get) do %>

     <%= select_tag 'range' ,options_for_select([['---選択してください---', ''], ['麺バー', '1'], ['ラーメン', '2']]) %>

       <%= select_tag 'search', options_for_select([["前方一致","forward_match"], ["後方一致","backward_match"], ["部分一致","partial_match"], ["完全一致","perfect_match"]]) %>
       <%= text_field_tag (:word) %>
       <%= submit_tag "検索" %>

   <% end %>

<% end %>
  
  
</header>
    
    
    <%= yield %>
    
  </body>
  <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight.dwc.inc</p>
          </div>
        </div>
      </div>
    </footer>
  
</html>
