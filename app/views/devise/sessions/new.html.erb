<div class = "container">
	<div class="wrapper">
		<form action="" method="post" name="Login_Form" class="form-signin">       
		    <h3 class="form-signin-heading">Welcome 麺stagram! </h3>
		    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
			  <hr class="colorgraph"><br>
  			  <div class="row align-items-center">
            <div class="col-md-5">メールアドレス</div>
            <div class="col-md-3">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
          </div>
          <br/>
          <div class="row align-items-center">
            <div class="col-md-5">パスワード</div>
            <div class="col-md-3">
              <%= f.password_field :password, autocomplete: "current-password" %>
          </div>  
          </div>
         
          <div>
            <br/>
			      <button class="btn btn-lg btn-primary btn-block"  name="Submit" value="Login" type="Submit">Login</button> 
			   </div>
			    <div class="text center">
          登録がお済みでない方は<%= link_to "こちら", new_user_registration_path %>
          </div>
			  <% end %>
		</form>			
	</div>
</div>