<div class="profile-container">
  <h3 class="profile-name"><%= @user.username %></h3>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  
  <% if @user.id == current_user.id %>
    <p><%= link_to "編集", edit_user_path(@user) %></p>
  <% end %>

</div>

<% @ramen_images.each do |ramen_image| %>
<div>
  <%= link_to ramen_image_path(ramen_image.id) do %>
  <%= attachment_image_tag ramen_image, :image %>
  <% end %>
  <p><%= attachment_image_tag ramen_image.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></p>
  <p>ユーザーネーム：<%= ramen_image.user.username %></p>
  <p>店舗名：<%= ramen_image.shop_name %></p>
  <P>住所 : <%= ramen_image.address %></P>
  <P>税込価格 : <%= ramen_image.tax_price %></P>
  <P>スープ : <%= ramen_image.taste %></P>
  <p>感想：<%= ramen_image.caption %></p>
  <p><%= link_to "#{ramen_image.ramen_comments.count} コメント", ramen_image_path(ramen_image.id) %></p>
</div>
<% end %>
<%= paginate @ramen_images %>