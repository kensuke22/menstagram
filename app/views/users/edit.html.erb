<div class="card" style="width: 100rem; height: 25rem;">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
       <br/><h2>ユーザー編集</h2>
        <%= form_with model:@user, local:true do |f| %>
          <div class="form-group">
            <%= f.label :"アイコン", class:"form-label" %>
            <%= f.attachment_field :profile_image, placeholder: "", class:"form-control-file user_image" %>
          </div>
          <div class="form-group">
            <%= f.label :"名前", class:"form-label" %>
            <%= f.text_field :username, class:"form-control" %>
          </div>
          <div class="form-group">
           <%= f.label :"プロフィール", class:"form-label" %>
            <%= f.text_field :profile, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit "変更を保存", class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>