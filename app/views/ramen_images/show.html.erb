<div class="post-body">
  <!--投稿詳細-->
  <%= attachment_image_tag @ramen_image, :image, :fill, 300, 300, format: 'jpeg', fallback: "no_image.jpg" %>
  <p>店舗名：<%= @ramen_image.shop_name %></p>
  <p>住所：<%= @ramen_image.address %></p>
  <p>税込価格：<%= @ramen_image.tax_price %></p>
  <p>スープ：<%= @ramen_image.taste %></p>
  <p>感想：<%= @ramen_image.caption %></p>
  <div>評価</div>
  <div class="ramen_image-evaluation" data-score="<%= @ramen_image.evaluation %>"></div>
  <p>ユーザーネーム：<%= @ramen_image.user.username %></p>
  <p>投稿日時：<%= @ramen_image.created_at.strftime('%Y/%m/%d') %></p>
  <script>
  $('.ramen_image-evaluation').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    },
    path: '/assets/'
  });
  </script>
  
  
  <!--投稿削除-->
  <% if @ramen_image.user == current_user %>
    <%= link_to "消去", ramen_image_path(@ramen_image), method: :delete %>
  <% end %>
  
  <div id="ramen_image_<%= @ramen_image.id %>">
  <!--いいね機能-->
  <%= render 'favorites/favorite', ramen_image: @ramen_image %>
  </div>
  
</div>


<p>コメント数：<%= @ramen_image.ramen_comments.count %></p>

<!--コメント一覧-->
<div id = "comments">
<%= render 'ramen_comments/index', ramen_image: @ramen_image %>
</div>
<!--コメント投稿-->
<div class="new-comment">
<%= render 'ramen_comments/form', ramen_image: @ramen_image %>
</div>

<!--マップ表示-->
<%= render 'ramen_images/gmap', ramen_image: @ramen_image %>